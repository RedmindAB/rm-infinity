{
  "name": "rm-infinity",
  "version": "0.0.6",
  "description": "Sorted data from multiple data sources",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "npm run gen:docs && git commit -am \"gen docs\" && git push && git push --tags",
    "gen:docs": "typedoc --out docs --exclude **/*.test.ts src"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RedmindAB/rm-infinity.git"
  },
  "keywords": [
    "infinity",
    "infinityscroll",
    "redmind",
    "scroll",
    "multiple",
    "datasource"
  ],
  "author": "Gurey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RedmindAB/rm-infinity/issues"
  },
  "homepage": "https://github.com/RedmindAB/rm-infinity#readme",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "jest": "^25.5.2",
    "moment": "^2.24.0",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.17.6",
    "typescript": "^3.8.3"
  }
}
